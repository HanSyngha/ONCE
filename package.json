{
  "name": "once",
  "version": "1.0.0",
  "description": "ONCE - 한번만 입력하세요, 알아서 정리해 드릴게요. AI powered 노트 · 지식 · 할일관리",
  "private": true,
  "workspaces": [
    "api",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:api": "npm run dev -w @once/api",
    "dev:frontend": "npm run dev -w @once/frontend",
    "build": "npm run build -w @once/api && npm run build -w @once/frontend",
    "build:api": "npm run build -w @once/api",
    "build:frontend": "npm run build -w @once/frontend",
    "start": "npm run start -w @once/api",
    "lint": "npm run lint -ws",
    "typecheck": "npm run typecheck -ws",
    "db:generate": "npm run db:generate -w @once/api",
    "db:push": "npm run db:push -w @once/api",
    "db:migrate": "npm run db:migrate -w @once/api",
    "db:studio": "npm run db:studio -w @once/api",
    "docker:build": "docker-compose -f docker/docker-compose.yml build",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
